{
  "compilerOptions": {
    "outDir": "dist", // Output directory for compiled files
    "declaration": true, // Generate .d.ts files
    "declarationDir": "dist", // Where to place the declaration files
    "moduleResolution": "node", // Use Node's module resolution strategy
    "esModuleInterop": true, // If you're working with ES modules
    "strict": true, // Enable strict type-checking
    "target": "ES6", // Use ES6 features for output
    "module": "ESNext", // Set to ES module system
    "skipLibCheck": true, // Skips type checking of declaration files
    "resolveJsonModule": true // If you use JSON files
  },
  "include": [
    "src/**/*.ts" // Specify the files to include for compilation
  ]
}
